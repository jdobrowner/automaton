{
  "name": "automaton",
  "version": "1.0.0",
  "description": "Cellular automaton on a Escher tile grid",
  "main": "index.js",
  "repository": "git@github.com:jdobrowner/automaton.git",
  "scripts": {
    "start": "npm run build:css && node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js & npm run watch:css",
    "test": "mocha --compilers js:babel-core/register --require ./test/test_helper.js --recursive ./test",
    "test:watch": "npm run test -- --watch",
    "build:css": "rm -f build/style.css && lessc style/style.less --clean-css build/style.css",
    "watch:css": "chokidar-cmd -c 'npm run build:css' -t style/**/*.less",
    "build:js": "webpack",
    "build:html": "rm -f build/index.html && cp index.html build/",
    "build:favicons": "cp -r favicons/* build/",
    "build": "rm -rf build && mkdir -p build && npm run build:html && npm run build:css && npm run build:favicons && npm run build:js",
    "deploy": "npm run build && cd build && echo | surge --domain cellularautomaton.science"
  },
  "author": "Jason Dobrowner and Monika Zarako-Dobrowner",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "chai": "^3.5.0",
    "chai-jquery": "^2.0.0",
    "chokidar": "^1.6.1",
    "chokidar-cmd": "^1.2.1",
    "jquery": "^3.1.1",
    "jsdom": "^9.9.1",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "mocha": "^3.2.0",
    "react-addons-test-utils": "^15.4.1",
    "uglify-js": "^2.7.5",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "babel-preset-stage-1": "^6.16.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "redux": "^3.6.0"
  }
}
